{
	"name": "carl-notes",
	"displayName": "Carl Notes",
	"description": "A tiny extension to help you accessing notes from any workspace. Notes, reminders, snippets or anything you need during development. Right in your editor",
	"version": "1.0.0",
	"publisher": "Nerwin",
	"license": "MIT",
	"icon": "images/notes-icon.png",
	"author": {
		"name": "Nerwin",
		"url": "https://github.com/nerwin"
	},
	"repository": {
		"url": "https://github.com/nerwin/carl-notes"
	},
	"keywords": [
		"carl",
		"notes",
		"utils",
		"productivity",
		"tools"
	],
	"engines": {
		"vscode": "^1.49.0"
	},
	"extensionKind": [
		"ui"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:cnotes",
		"onCommand:cnotes.listNotes",
		"onCommand:cnotes.refreshNoteFolders",
		"onCommand:cnotes.linkNoteFolder",
		"onCommand:cnotes.newNote"
	],
	"main": "./out/extension",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "carl-notes",
					"title": "Carl Notes",
					"icon": "images/notes.svg"
				}
			]
		},
		"views": {
			"carl-notes": [
				{
					"id": "cnotes",
					"name": "Notes"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "cnotes",
				"contents": "You need to link at least one folder to add and display your notes.\n[Link a Folder](command:cnotes.linkNoteFolder)"
			}
		],
		"commands": [
			{
				"command": "cnotes.deleteNote",
				"title": "Delete Note",
				"category": "Carl Notes",
				"icon": "$(trash)"
			},
			{
				"command": "cnotes.listNotes",
				"title": "List Notes",
				"category": "Carl Notes"
			},
			{
				"command": "cnotes.newNote",
				"title": "New Note",
				"category": "Carl Notes",
				"icon": "$(file-add)"
			},
			{
				"command": "cnotes.refreshNoteFolders",
				"title": "Refresh Notes",
				"category": "Carl Notes",
				"icon": "$(refresh)"
			},
			{
				"command": "cnotes.renameNote",
				"title": "Rename Note",
				"category": "Carl Notes",
				"icon": "$(replace)"
			},
			{
				"command": "cnotes.unlinkNoteFolder",
				"title": "Unlink folder",
				"category": "Carl Notes",
				"icon": "$(debug-disconnect)"
			},
			{
				"command": "cnotes.linkNoteFolder",
				"title": "Link new folder",
				"category": "Carl Notes",
				"icon": "$(link)"
			},
			{
				"command": "cnotes.openNoteFolder",
				"title": "Open folder",
				"category": "Carl Notes",
				"icon": "$(link-external)"
			}
		],
		"keybindings": [
			{
				"command": "cnotes.listNotes",
				"key": "alt+l",
				"mac": "alt+l"
			},
			{
				"command": "cnotes.newNote",
				"key": "alt+n",
				"mac": "alt+n"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "cnotes.deleteNote",
					"when": "false"
				},
				{
					"command": "cnotes.renameNote",
					"when": "false"
				},
				{
					"command": "cnotes.openNoteFolder",
					"when": "false"
				}
			],
			"view/title": [
				{
					"command": "cnotes.linkNoteFolder",
					"when": "view == cnotes",
					"group": "navigation@1"
				},
				{
					"command": "cnotes.refreshNoteFolders",
					"when": "view == cnotes",
					"group": "navigation@10"
				}
			],
			"view/item/context": [
				{
					"command": "cnotes.renameNote",
					"when": "view == cnotes && viewItem == note",
					"group": "inline@1"
				},
				{
					"command": "cnotes.deleteNote",
					"when": "view == cnotes && viewItem == note",
					"group": "inline@2"
				},
				{
					"command": "cnotes.newNote",
					"when": "view == cnotes && viewItem == noteFolder",
					"group": "inline@1"
				},
				{
					"command": "cnotes.unlinkNoteFolder",
					"when": "view == cnotes && viewItem == noteFolder",
					"group": "inline@2"
				},
				{
					"command": "cnotes.openNoteFolder",
					"when": "view == cnotes && viewItem == noteFolder",
					"group": "inline@3"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Carl Notes",
			"properties": {
				"cnotes.noteFolderLocations": {
					"type": "array",
					"default": [],
					"description": "Folder locations for notes"
				},
				"cnotes.defaultFileExtension": {
					"type": "string",
					"default": "md",
					"description": "Default file extension when creating new note if not specified"
				},
				"cnotes.allowedFileExtensions": {
					"type": "array",
					"default": [
						"md",
						"ts",
						"js",
						"log",
						"txt",
						"sql",
						"json",
						"jsonc",
						"yaml"
					],
					"description": "Allowed file extension to be displayed"
				}
			}
		}
	},
	"scripts": {
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"package": "vsce package",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test:unit": "echo \"No tests yet\"",
		"vscode:prepublish": "npm run -S esbuild-base -- --minify",
		"esbuild-base": "rimraf ./out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run -S esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch"
	},
	"dependencies": {
		"glob": "^7.1.6"
	},
	"devDependencies": {
		"@types/eslint": "^7.2.10",
		"@types/eslint-plugin-prettier": "^3.1.0",
		"@types/glob": "^7.1.3",
		"@types/node": "^15.0.1",
		"@types/prettier": "^2.2.3",
		"@types/vscode": "^1.49.0",
		"@typescript-eslint/eslint-plugin": "^4.22.0",
		"@typescript-eslint/parser": "^4.22.0",
		"commitlint": "^17.6.1",
		"esbuild": "^0.11.17",
		"eslint": "^7.25.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-security": "^1.4.0",
		"husky": "^6.0.0",
		"lint-staged": "^13.2.1",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.1.1",
		"typescript": "^4.2.4",
		"typesync": "^0.10.0",
		"vscode-test": "^1.5.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run test:unit -- --since master && lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix",
			"git add"
		]
	},
	"prettier": {
		"printWidth": 140,
		"singleQuote": true,
		"trailingComma": "all",
		"arrowParens": "avoid",
		"bracketSpacing": true
	}
}
